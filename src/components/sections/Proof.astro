---
import { statsData } from '../../data/content';
import CountUp from '../ui/CountUp.svelte';
---

<section id="proof" class="relative w-full py-20 md:py-32 bg-surface border-y border-white/5">
    
    <div class="absolute inset-0 opacity-5 pointer-events-none" 
         style="background-image: radial-gradient(#C5A059 1px, transparent 1px); background-size: 40px 40px;">
    </div>

    <div class="max-w-7xl mx-auto px-6 md:px-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-0 divide-y md:divide-y-0 md:divide-x divide-white/10">
            {statsData.map((stat) => (
                <div class="px-4 py-8 md:py-0">
                    <CountUp 
                        client:visible 
                        value={stat.value} 
                        label={stat.label} 
                        prefix={stat.prefix}
                        suffix={stat.suffix} 
                    />
                </div>
            ))}
        </div>
    </div>

</section>