---
import { contactData } from '../../data/content';
import ContactButton from '../ui/ContactButton.svelte';
---

<footer id="vault" class="relative bg-void border-t border-white/10 pt-20 md:pt-24 overflow-hidden">
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-12 mb-20 md:mb-32">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-32 items-center">
            
            <div class="flex flex-col justify-center items-start">
                <h2 class="text-3xl md:text-5xl font-heading font-bold text-silver tracking-cinematic leading-none mb-6">
                    {contactData.cta}
                </h2>
                <p class="text-steel font-sans text-lg max-w-md mb-10">
                    {contactData.subCta}
                </p>
                
                <ContactButton client:visible label={contactData.buttonLabel} />
            </div>

            <div class="relative w-full">
                <div class="bg-surface/20 backdrop-blur-sm p-6 md:p-8 border-l-2 border-brass/50">
                    <h3 class="text-lg font-heading text-white mb-6 tracking-widest">
                        {contactData.companyName}
                    </h3>

                    <div class="space-y-3 font-mono text-xs md:text-sm">
                        {contactData.details.map((item) => (
                            <div class="flex justify-between items-end border-b border-white/5 pb-1">
                                <span class="text-steel/50">{item.label}</span>
                                <span class="text-silver tracking-wider select-all text-right ml-4">{item.value}</span>
                            </div>
                        ))}
                    </div>
                </div>
            </div>

        </div>
    </div>

