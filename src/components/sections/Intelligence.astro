---
import { faqData } from '../../data/content';
import IntelligenceList from '../ui/IntelligenceList.svelte';
---

<section id="intelligence" class="relative w-full py-20 md:py-32 px-4 md:px-12 lg:px-24 bg-void z-10 border-t border-white/5">
    
    <div class="max-w-7xl mx-auto">
        <div class="mb-12 md:mb-24 flex flex-col md:flex-row justify-between items-start md:items-end border-b border-white/10 pb-8">
            <div>
                <span class="text-brass font-mono text-xs tracking-widest uppercase mb-2 block">/ 04 BAZA WIEDZY</span>
                <h2 class="text-3xl md:text-5xl font-heading font-bold text-silver tracking-cinematic uppercase leading-tight">
                    DANE <br/> <span class="text-steel/50">STRATEGICZNE</span>
                </h2>
            </div>
            
            <div class="hidden md:block">
                <div class="w-32 h-32 border border-white/5 rounded-full flex items-center justify-center animate-spin-slow opacity-20">
                    <div class="w-full h-[1px] bg-white/20"></div>
                    <div class="h-full w-[1px] bg-white/20 absolute"></div>
                </div>
            </div>
        </div>

        <IntelligenceList client:visible data={faqData} />
        
    </div>
</section>

<style>
    .animate-spin-slow {
        animation: spin 20s linear infinite;
    }
    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>